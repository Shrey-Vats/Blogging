generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// this is v1 so it is very basic
model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String

  blogs     Blog[]
  createdAt DateTime
}

model Blog {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  title     String
  slug      String  @unique
  content   String  @unique  // html content
  image     String

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
