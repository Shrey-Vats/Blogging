generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
  comment  Comment[]
  blogs     Blog[]
  createdAt DateTime
}

model Blog {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  title     String
  slug      String  @unique
  content   String
  image     String

  comment   Comment[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt 
}

model Comment {
  id String @id @default(cuid())
  userId String
  user  User  @relation(fields: [userId], references: [id])
  blogId String
  blog  Blog  @relation(fields: [blogId], references: [id])
  title  String
  decription String
  rating String
}